<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.onlinemarketing.activity.PosterDetailActivity" >

    <ListView
        android:id="@+id/listPoster"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:layout_below="@+id/linearPoster"
         />

    <LinearLayout
        android:id="@+id/linearPoster"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="9"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnChatDirectly_Detail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Chát " />

        <Button
            android:id="@+id/btnCall_Detail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Gọi Điện" />

        <Button
            android:id="@+id/btnSendSMS_Detail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="gửi sms" />
    </LinearLayout>

</LinearLayout>