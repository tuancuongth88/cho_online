<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/item_img_trangChu"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/item_txt_tenSP"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Giầy mới 2015"
                
                android:textColor="#14b962"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item_txt_giaSP"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="200.000 VNĐ"
                android:textColor="@android:color/holo_red_dark" />

            <TextView
                android:id="@+id/item_txt_ngay"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="29/06/2015"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#14b962" />

</LinearLayout>