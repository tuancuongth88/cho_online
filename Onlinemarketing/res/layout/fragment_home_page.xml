<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.onlinemarketing.activity.HomePageActivity$PlaceholderFragment" >

    <ListView
        android:id="@+id/listHomePage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    </ListView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnHome_FragmentCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home" />

        <Button
            android:id="@+id/btnChat_FragmentCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chat" />

        <Button
            android:id="@+id/btnFavorite_FragmentCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yêu THích" />

        <Button
            android:id="@+id/btnProfile_FragmentCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile" />
    </LinearLayout>

</RelativeLayout>